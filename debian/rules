#!/usr/bin/make -f
# -*- makefile -*-

export DPKG_GENSYMBOLS_CHECK_LEVEL=4

ifeq ($(DEB_HOST_ARCH),armhf)
        ENABLE_MEMCHECK_OPTION = OFF
else
        ENABLE_MEMCHECK_OPTION = ON
endif

%:
	dh $@ --parallel --fail-missing --with click

override_dh_auto_configure:
	dh_auto_configure -- -DBUILD_DOXYGEN=YES -DENABLE_MEMCHECK_OPTION=${ENABLE_MEMCHECK_OPTION}

override_dh_makeshlibs:
	dh_makeshlibs -V

override_dh_click:
		dh_click --name infographic
		dh_click --name usermetrics
